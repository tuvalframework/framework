{
  "compilerOptions": {
    "stripInternal": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "strict": true,
    "strictNullChecks": false, // yapılandırıcıda kullanılmaması için false yapıldı
    "strictPropertyInitialization": false, // yapılandırıcıda kullanılmaması için false yapıldı
    "sourceMap": true,
    "declaration": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist_types/types",
    "outDir": "dist/lib",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/monday-ui-react-core/types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}