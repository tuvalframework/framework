{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "module": "es2015",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        "strict": true,
        "sourceMap": true,
        "declaration": false,
        "noImplicitThis": false,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "dist/lib",
        "jsx": "react",
        "jsxFactory": "Teact.createElement",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}